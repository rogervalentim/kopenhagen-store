<!DOCTYPE html>
<html>
  <head>
    <title>home</title>
    <!-- css -->
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/home.css" />
    <!-- bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('./partials/header.ejs') %> <%-
    include('./partials/carrosel.ejs') %>
    <main>
      <h3 class="title-home">Textura Única,Cremosidade e Muito Sabor</h3>
      <section class="products-container-home">
        <section class="products">
          <% products.forEach(product => { %>
          <section class="row-products">
            <section class="info-product">
              <div class="info-product-container">
                <img src="<%= product.image %>" />
                <p class="name"><%= product.name %></p>
                <p class="price"><strong><%= product.price %></strong></p>
                  <div class="bag-container">
                    <button class="minus"><strong>-</strong></button>1<button
                      class="plus"
                    >
                      <strong>+</strong>
                    </button>
                    <img
                      src="/images/home/sacola-botao.jpg"
                      alt="sacola-botão"
                    />
                  </div>
              </div>
              <% }) %>
            </section>
          </section>
        </section>
      </section>
    </main>
    <%- include('./partials/kits.ejs') %>
    <%- include('./partials/kopenhagen-vitrine.ejs') %> 
    <%- include('./partials/footer.ejs') %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
